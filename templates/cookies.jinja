{% extends "base.jinja" %}

{% block contenu %}
<h2>Choisissez votre langue</h2>
<form action="/modification-cookies" method="post" class="p-2 w-50 mx-auto">
    <fieldset>
        <label for="langue">Langue:</label>
        <select name="langue" id="langue">
            <option value="fr_CA" {% if langue=='fr_CA' %}selected{% endif %}>fr_CA</option>
            <option value="en_US" {% if langue=='en_US' %}selected{% endif %}>en_US</option>
            <option value="en_CA" {% if langue=='en_CA' %}selected{% endif %}>en_CA</option>
        </select>
    </fieldset>
    <button type="submit" class="btn btn-secondary">Modifier la langue</button>
</form>


{% endblock %}