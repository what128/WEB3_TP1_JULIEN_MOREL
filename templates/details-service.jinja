{% extends "base.jinja" %}

{% block contenu %}
{% if erreur_service == true %}
<p>Une erreur est survenue lors de l'affichange de ce service.</p>
{% else %}
<h2>Détails du service</h2>
<ul>
    <li><img src="{{ url_for('static', filename='images/rick.png') }}" alt="Image de Rick Astley"></li>
    <li>Titre: {{details_service.titre}}</li>
    <li>Localisation: {{details_service.localisation}}</li>
    <li>Description: {{details_service.description}}</li>
    <li>Coût: {{details_service.cout}}$</li>
    <li>Date de création: {{details_service.date_creation}}</li>
    <li>Statut:
     {% if details_service.actif == 1 %}
     Actif
     {% else %}
     Inactif
     {% endif %}
     </li>
    <li>Catégorie: {{details_service.nom_categorie}}</li>
    <li><a href="http://127.0.0.1:5000/modifier?id={{details_service.id_service}}">Modifier le service</a></li>
    
</ul>
{% endif%}

{% endblock %}