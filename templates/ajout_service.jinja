{% extends "base.jinja" %}

{% block contenu %}
<h2>Ajouter un service</h2>
<form action="/ajouter" method="post" novalidate class="p-2 w-50 mx-auto">

    <fieldset>
        <label for="titre">Titre:</label>
        <input type="text" name="titre" id="titre" value="{{titre}}" class="{{classe_titre}}" />
        <div class="invalid-feedback">Le titre doit contenir entre 1 et 50 caractères, et il ne peut pas y avoir de
            balises html.</div>
    </fieldset>

    <fieldset>
        <label for="localisation">Localisation:</label>
        <input type="text" name="localisation" id="localisation" value="{{localisation}}"
            class="{{classe_localisation}}" />
        <div class="invalid-feedback">La localisation doit contenir entre 1 et 50 caractères, et il ne peut pas y avoir
            de balises html.</div>
    </fieldset>

    <fieldset>
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" value="{{description}}" class="{{classe_description}}" />
        <div class="invalid-feedback">La description doit contenir entre 5 et 2000 caractères, et il ne doit pas y avoir
            de balises html.</div>
    </fieldset>

    <fieldset>
        <label for="cout">Coût (en $):</label>
        <input type="number" name="cout" id="cout" value="{{cout}}" />
        <div class="invalid-feedback">Le coût doit être une valeur monétaire.</div>
    </fieldset>

    <fieldset>
        <label for="statut">Statut:</label>
        <div id="case-statut">
            <input class="col-3" type="checkbox" id="statut" name="statut" value="1" {% if statut==1 %} checked {% endif
                %}>
            <label for="statut">Actif</label>
        </div>
    </fieldset>

    <fieldset>
        <label for="categorie">Catégorie:</label>
        <select name="categorie" id="categorie" class="{{ classe_categorie }}">
            {% for categorie_info in categories %}
            <option value="{{ categorie_info.id_categorie }}" {% if categorie_info.id_categorie==categorie %}selected{%
                endif %}>
                {{ categorie_info.nom_categorie }}</option>
            {% endfor %}
        </select>
        <div class="invalid-feedback">Vous devez sélectionner une catégorie.</div>
    </fieldset>

    <fieldset>
        <label for="photo">Photo:</label>
        <input type="text" name="photo" id="photo" value="{{photo}}" class="{{classe_photo}}">
        <div class="invalid-feedback">Ce champ ne peut contenir des balises html.</div>
    </fieldset>

    <button type="submit" class="btn btn-secondary">Ajouter</button>
</form>

{% endblock %}