{% extends "base.jinja" %}

{% block contenu %}
<h2>Services proposés</h2>
<ul>
    {% for unservice in services %}
        {% if unservice.actif %}
            <li><img src="{{ url_for('static', filename='images/rick.png') }}" alt="Image de Rick Astley"></li>
            <li>Titre : {{unservice.titre}}</li>
            <li>Catégorie: {{unservice.nom_categorie}}</li>
            <li>Localisation: {{unservice.localisation}}</li>
            <a href="http://127.0.0.1:5000/service?id={{unservice.id_service}}">Accéder au service</a>
        {% endif %}
    {% endfor %}
</ul>
<button type="button"><a href="http://127.0.0.1:5000/ajout">Ajouter un service</a></button>


{% endblock %}